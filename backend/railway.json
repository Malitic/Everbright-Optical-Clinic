{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "php artisan serve --host=0.0.0.0 --port=$PORT",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "APP_NAME": "Everbright Optical System",
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_URL": "https://everbright-optical-backend.railway.app",
    "DB_CONNECTION": "sqlite",
    "DB_DATABASE": "/app/database/database.sqlite",
    "CACHE_DRIVER": "file",
    "SESSION_DRIVER": "file",
    "QUEUE_CONNECTION": "sync",
    "NIXPACKS_PHP_VERSION": "8.2",
    "NIXPACKS_PHP_EXTENSIONS": "sqlite3,mbstring,openssl,curl,fileinfo,json,zip",
    "NIXPACKS_INSTALL_CMD": "composer install --no-dev --optimize-autoloader",
    "NIXPACKS_BUILD_CMD": "php artisan key:generate --force && php artisan migrate --force"
  }
}
